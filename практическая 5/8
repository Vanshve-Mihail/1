print('Задача 8')
def function():
    a = int(input())
    minn = 1
    maxx = 1
    while a != 0:
        b = int(input())
        if b != 0:
            if a == b:
                minn += 1
            else:
                if minn > maxx:
                    maxx = minn
                minn = 1
                a = b
        else:
            break
    print(maxx)
function()
